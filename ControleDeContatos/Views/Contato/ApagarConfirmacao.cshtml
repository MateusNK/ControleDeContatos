@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<div class="form-buttons mb-3">
    <a class="btn btn-secondary btn-block mb-2" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
    <a class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Excluir</a>
</div>

<style>

    .form-buttons {
        display: flex;
        flex-direction: column;
    }
</style>